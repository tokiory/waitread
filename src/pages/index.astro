---
import Layout from '@/layouts/Layout.astro';
import IconSparkles from '@/components/icons/IconSparkles.astro';
import { Browser } from '@/modules/browser/components/Browser.tsx';
import articlesContent from '#/articles.yaml';
---

<Layout class="flex flex-col" title="Wait, Read">
<div class="flex items-center gap-2">
  <IconSparkles class="w-16" />
  <div class="text-4xl sm:text-7xl font-bold">Wait, Read</div>
</div>

  <p class="mt-4 border-l-4 pl-4">List of articles that will pump up your hard skills in development, which you can read at your leisure</p>

  <!-- Maybe it should be inside the list? -->

  <Browser links={articlesContent} client:load className="mt-4" />
</Layout>
