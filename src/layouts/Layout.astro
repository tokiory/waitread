---
import '@fontsource-variable/inter';

interface Props {
	title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Tokiory's Readlist" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
  <body class:list={[
        "max-w-[840px] p-4 py-12 mx-auto",
        className
  ]}>
		<slot />
    <footer class="mt-12 flex flex-col gap-1">
      <div class="text-center text-sm text-muted-foreground">
        Developed by <a href="https://github.com/tokiory" target="_blank">Tokiory</a>
      </div>
      <div class="text-center text-xs text-muted-foreground">
        And a bunch of kittens ğŸˆ ğŸˆ ğŸˆ
      </div>
    </footer>
	</body>
</html>

